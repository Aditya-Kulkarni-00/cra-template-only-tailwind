{
  "name": "cra-template-adityak-only-tailwind",
  "main": "template.json",
  "version": "1.0.0",
  "files": ["template", "template.json"],
  "repository": {
    "type": "git",
    "url": "https://github.com/Aditya-Kulkarni-00/cra-template-only-tailwind",
    "directory": "/"
  },
  "clean-files": "rm -rf ./template/public ./template/src && rm -f ./template/.eslintrc",
  "copy-files": "cp -a ./src/. template/src && cp -a ./public/. template/public && cp .eslintrc template/",
  "prepublishOnly": "yarn clean-files && yarn copy-files",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23"
  }
}
